{
    "name": "fux/fux-cli",
    "description": "A CLI tool that help development process using Fux Framework",
    "autoload": {
        "psr-4": {
            "FuxCli\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Matteo Fusillo",
            "email": "58771053+mfusillo98@users.noreply.github.com"
        }
    ],
    "require": {
        "symfony/console": "^5.0|^6.3",
        "php": "^7.3|^8.0"
    },
    "bin": [
        "bin/fux"
    ],
    "require-dev": {
        "phpunit/phpunit": "^10.3"
    },
    "scripts": {
        "build": [
            "@composer --no-plugins --no-interaction install --no-scripts --no-dev",
            "@composer --no-plugins --no-interaction archive"
        ]
    },
    "scripts-descriptions": {
        "build": "Build project artifact."
    }
}
